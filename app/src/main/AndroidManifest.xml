<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission (required for network requests) -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_logo"
        android:roundIcon="@drawable/admin_floating_nav_bg"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme._4csofo">

        <!-- LoginActivity is now the launcher -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities - TANGGALIN ANG MGA FRAGMENTS! -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <!-- CheckoutActivity lang ang natirang Activity -->
        <activity
            android:name=".CheckoutActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <!-- UsersActivity (kung ito ay talagang Activity) -->
        <activity
            android:name=".UsersActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity android:name=".ClientCartFragment" android:exported="false" />
        <activity android:name=".ClientOrdersFragment" android:exported="false" />
        <activity android:name=".AdminOrdersFragment" android:exported="false" />
        <activity android:name=".AdminCategoriesFragment" android:exported="false" />
        <activity android:name=".AdminMenuItemsFragment" android:exported="false" />
        <activity android:name=".ClientProfileFragment" android:exported="false" />

    </application>

</manifest>