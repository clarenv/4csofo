<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Food Image -->
            <ImageView
                android:id="@+id/ivFoodImageModal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="#F0F0F0"/>

            <!-- Food Name -->
            <TextView
                android:id="@+id/tvFoodNameModal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <!-- Price and Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvFoodPriceModal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â‚±0.00"
                    android:textSize="20sp"
                    android:textColor="#10A048"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvFoodCategoryModal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="#E0F2F1"/>
            </LinearLayout>

            <!-- Preparation Time -->
            <TextView
                android:id="@+id/tvPrepTimeModal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prep Time: 0 mins"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"/>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <RatingBar
                    android:id="@+id/ratingBarModal"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvFoodRatingModal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not yet rated"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvFoodDescriptionModal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No description available"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="4dp"/>

            <!-- Senior Discount -->
            <LinearLayout
                android:id="@+id/discountSeniorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘´ Senior: "
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/tvDiscountSenior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- PWD Discount -->
            <LinearLayout
                android:id="@+id/discountPWDLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â™¿ PWD: "
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/tvDiscountPWD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Add-ons Section -->
            <LinearLayout
                android:id="@+id/addOnsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Available Add-ons"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvAddOns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No add-ons available"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCloseModal"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Close"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/primary"
            android:textColor="#FF0000"/>

        <Button
            android:id="@+id/btnAddToCartModal"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Add to Cart"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/primary"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>
