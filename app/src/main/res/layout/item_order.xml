<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- CUSTOMER INFO SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Information"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp" />

            <!-- Customer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Customer:"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <!-- Order Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Order Date:"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nov 25, 2024 2:30 PM"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <!-- Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Items:"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burger, Fries"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:paddingStart="12dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="4px"
                android:background="#F8F9FA">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total Amount:"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚±155.00"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"/>
            </LinearLayout>
        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="20dp"/>

        <!-- PAYMENT INFO SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Information"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp" />

            <!-- Payment Method -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Payment Method:"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GCash"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <!-- GCash Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="GCash Number:"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtGcashInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09171234567"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <!-- QR Code -->
            <ImageView
                android:id="@+id/qrImage"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/qr_gcash"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:contentDescription="GCash QR Code"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="20dp"/>

        <!-- DELIVERY & STATUS SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery and Status"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp" />

            <!-- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:background="#F5F9FF"
                android:padding="12dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textColor="#1976D2"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textColor="#1976D2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <!-- Transaction ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Transaction ID:"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtTransaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TX123"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <!-- Pickup Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Pickup Info:"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtPickupInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store #1, 12:30 PM"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <!-- Delivery Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Delivery Location:"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtDeliveryLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bubukal, Santa Cruz"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:paddingStart="12dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>