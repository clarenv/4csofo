<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ORDER HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left side: Order ID & Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#ORD123"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nov 25, 2024 2:30 PM"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Right side: Status & Total -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textColor="#FF9800"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/primary"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱155.00"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- EXPANDABLE CONTENT -->
        <LinearLayout
            android:id="@+id/layoutExpandContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="16dp">

            <!-- Payment Method -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Payment:"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GCash"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items:"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Burger x2 - ₱100.00\n• Fries x1 - ₱55.00"
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"/>

            <!-- GCash Info -->
            <LinearLayout
                android:id="@+id/layoutGcashInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="GCash Ref:"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtGcashInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TX123456789"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Pickup Info -->
            <LinearLayout
                android:id="@+id/layoutPickupInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pickup:"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtPickupInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Branch: Main\nTime: ASAP"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Delivery Location -->
            <LinearLayout
                android:id="@+id/layoutDeliveryLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery Location:"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtDeliveryLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bubukal, Sta. Cruz, Laguna"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Action Buttons -->
            <Button
                android:id="@+id/btnViewReceipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Receipt"
                android:textColor="#4CAF50"
                android:backgroundTint="@color/primary"
                android:paddingVertical="12dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnRateFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Food"
                android:textColor="#FFEB3B"
                android:backgroundTint="@color/primary"
                android:paddingVertical="12dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnCancelOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel Order"
                android:textColor="#E91E63"
                android:backgroundTint="@color/primary"
                android:paddingVertical="12dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Expand Arrow -->
        <ImageView
            android:id="@+id/imgExpandArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:contentDescription="Expand"
            android:src="@android:drawable/arrow_down_float"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
