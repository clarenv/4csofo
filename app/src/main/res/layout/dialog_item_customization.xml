<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_light">

    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customize Item"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <!-- Select All -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:background="@color/background_card">

        <CheckBox
            android:id="@+id/cbSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select All Add-ons"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/containerAddons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- Totals Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/accent"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <TextView
            android:id="@+id/tvAddonsTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add-ons: ₱0.00"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCurrentItemTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Total: ₱0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelCustomization"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/background_card"
            android:paddingHorizontal="24dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnApplyCustomization"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Apply"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:backgroundTint="@color/primary"
            android:paddingHorizontal="24dp" />

    </LinearLayout>

</LinearLayout>