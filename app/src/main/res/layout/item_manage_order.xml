<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="2dp">

    <!-- Header Row with Order ID and Status Badge -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <!-- Order ID -->
        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order #1"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textSize="16sp" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Customer Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer: "
            android:textColor="#757575"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCustomer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Customer Name"
            android:textColor="#757575"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Order Details Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <!-- Total Price -->
        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="₱0.00"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Payment Method -->
        <TextView
            android:id="@+id/tvPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COD"
            android:textColor="#757575"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Progress Dots -->
    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● ○ ○ ○ ○"
        android:textSize="14sp"
        android:paddingBottom="12dp" />

    <!-- Next Status Button -->
    <Button
        android:id="@+id/btnUpdateStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark as Accepted"
        android:textColor="#FFFFFF"
        android:paddingVertical="10dp"
        android:textSize="14sp" />

    <!-- GCash Proof Section (Visible only for GCash orders) -->
    <LinearLayout
        android:id="@+id/gcashSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GCash Proof"
            android:textColor="#757575"
            android:textSize="13sp"
            android:paddingBottom="4dp" />

        <ImageView
            android:id="@+id/imgGcashProof"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:background="#FAFAFA"
            android:contentDescription="GCash Proof"
            android:padding="4dp" />

    </LinearLayout>

</LinearLayout>