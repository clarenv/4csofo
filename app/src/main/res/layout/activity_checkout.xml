<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- ORDER SUMMARY -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:id="@+id/containerOrderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"/>

        <!-- TOTAL with subtotal and delivery fee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subtotal"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱0.00"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delivery"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvDeliveryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱0.00"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginVertical="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱0.00"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ORDER TYPE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgOrderType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbPickup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pickup"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rbDelivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delivery"
                android:padding="12dp"
                android:checked="true"/>
        </RadioGroup>

        <!-- DELIVERY ADDRESS -->
        <LinearLayout
            android:id="@+id/containerDeliveryDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sta. Cruz, Laguna only"
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnUseSavedLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Saved"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="4dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnUseCurrentLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GPS"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnTypeManual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Type"
                    android:backgroundTint="#FF9800"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <EditText
                android:id="@+id/etDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street Barangay Sta.Cruz Laguna"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="3"
                android:padding="8dp"
                android:background="#F5F5F5"/>

            <!-- ADDED: Location Validation TextView -->
            <TextView
                android:id="@+id/tvLocationValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F44336"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- PICKUP TIME -->
        <LinearLayout
            android:id="@+id/containerPickupDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Time"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bagumbayan Branch • 8AM-8PM"
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnSelectPickupTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"/>

            <!-- ADDED: Pickup Time Warning -->
            <TextView
                android:id="@+id/tvPickupTimeWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF9800"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- PAYMENT METHOD -->
        <LinearLayout
            android:id="@+id/containerPaymentSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rgPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/rbCash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="COD"
                    android:padding="8dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbGcash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GCash"
                    android:padding="8dp"/>
            </RadioGroup>

            <!-- ADDED: COD Warning -->
            <TextView
                android:id="@+id/tvCodWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash on Delivery is limited to 10 items maximum"
                android:textColor="#FF9800"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="#FFF3E0"/>

            <!-- GCash Details -->
            <LinearLayout
                android:id="@+id/containerGcashDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal">

                <!-- GCash QR Code Image -->
                <ImageView
                    android:id="@+id/ivGcashQr"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gcash_qr"
                    android:contentDescription="GCash QR Code"
                    android:background="#FFFFFF"
                    android:elevation="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan QR Code"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send to GCash Number"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Reference Number Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reference Number (13 digits):"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etGcashReference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter 13-digit reference number"
                    android:inputType="number"
                    android:maxLength="13"
                    android:background="#F5F5F5"
                    android:padding="12dp"/>

                <!-- Upload Proof Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Proof of Payment:"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnUploadProof"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upload Screenshot"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnViewProof"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Proof"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Proof Preview -->
                <ImageView
                    android:id="@+id/ivProofPreview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <!-- PLACE ORDER -->
        <Button
            android:id="@+id/btnPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:padding="14dp"/>

    </LinearLayout>
</ScrollView>