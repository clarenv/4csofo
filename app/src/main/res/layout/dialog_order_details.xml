<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- Order Header -->
        <TextView
            android:id="@+id/textOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#212121"
            android:layout_marginBottom="16dp" />

        <!-- Customer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Customer:"
                android:textStyle="bold"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textCustomerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="John Doe"
                android:textSize="14sp"
                android:textColor="#212121" />
        </LinearLayout>

        <!-- Order Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status:"
                android:textStyle="bold"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDING"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <!-- Order Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Type:"
                android:textStyle="bold"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textOrderType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="DELIVERY"
                android:textSize="14sp"
                android:textColor="#212121" />
        </LinearLayout>

        <!-- Delivery Location (Only for Delivery Orders) -->
        <LinearLayout
            android:id="@+id/locationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location:"
                android:textStyle="bold"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textDeliveryLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="No location provided"
                android:textSize="14sp"
                android:textColor="#212121"
                android:maxLines="3" />
        </LinearLayout>

        <!-- Pickup Details (Only for Pickup Orders) -->
        <LinearLayout
            android:id="@+id/pickupSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pickup Branch:"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textPickupBranch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Not specified"
                    android:textSize="14sp"
                    android:textColor="#212121" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pickup Time:"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textPickupTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Not specified"
                    android:textSize="14sp"
                    android:textColor="#212121" />
            </LinearLayout>
        </LinearLayout>

        <!-- Payment Method -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Payment:"
                android:textStyle="bold"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textPaymentMethod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="COD"
                android:textSize="14sp"
                android:textColor="#212121" />
        </LinearLayout>

        <!-- Order Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date:"
                android:textStyle="bold"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textOrderDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Dec 10, 2025"
                android:textSize="14sp"
                android:textColor="#212121" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Order Items Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ORDER ITEMS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:textColor="#212121" />

        <!-- Order Items Container -->
        <LinearLayout
            android:id="@+id/containerOrderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp" />

        <!-- Total Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TOTAL AMOUNT:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/textTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <!-- GCash Proof Section -->
        <LinearLayout
            android:id="@+id/gcashSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GCASH PAYMENT PROOF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/imgGcashProof"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#FAFAFA"
                android:contentDescription="GCash Proof" />

        </LinearLayout>

        <!-- Close Button -->
        <Button
            android:id="@+id/buttonClose"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="CLOSE"
            android:background="#FF9800"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>