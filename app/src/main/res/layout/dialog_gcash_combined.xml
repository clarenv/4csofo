<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- QR CODE -->
        <ImageView
            android:id="@+id/qrImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/gcash_qr"
            android:contentDescription="QR Code"
            android:layout_marginBottom="20dp"/>

        <!-- DELIVERY LOCATION OPTIONS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Delivery Location"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <RadioGroup
            android:id="@+id/rgLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbCurrentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use Current Location"/>

            <RadioButton
                android:id="@+id/rbSavedAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved Address"
                android:enabled="false"/>

            <RadioButton
                android:id="@+id/rbManualInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Address Manually"/>
        </RadioGroup>

        <EditText
            android:id="@+id/edtManualAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter address"
            android:enabled="false"
            android:padding="10dp"
            android:layout_marginBottom="20dp"/>

        <!-- GCash Proof & Reference Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload GCash Screenshot"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnChooseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Image"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/edtReferenceNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Reference Number"
            android:padding="10dp"
            android:inputType="number"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnSavePayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Payment"/>

    </LinearLayout>
</ScrollView>
