<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Food Image -->
        <ImageView
            android:id="@+id/ivAdminFoodImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder"
            android:layout_marginBottom="16dp" />

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name:"/>
        <EditText
            android:id="@+id/etAdminFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food name" />

        <!-- Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:"/>
        <Spinner
            android:id="@+id/spAdminFoodCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Price -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"/>
        <EditText
            android:id="@+id/etAdminFoodPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Price" />

        <!-- Preparation Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparation Time (mins):"/>
        <EditText
            android:id="@+id/etAdminFoodPrepTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Preparation time" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"/>
        <EditText
            android:id="@+id/etAdminFoodDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:minLines="3"/>

        <!-- Add-ons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add-ons (comma separated):"/>
        <EditText
            android:id="@+id/etAdminFoodAddOns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add-ons" />

        <!-- Ingredients -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients (comma separated):"/>
        <EditText
            android:id="@+id/etAdminFoodIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingredients" />

        <!-- Serving Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serving Size:"/>
        <EditText
            android:id="@+id/etAdminFoodServingSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Serving Size" />

        <!-- Calories -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories:"/>
        <EditText
            android:id="@+id/etAdminFoodCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Calories" />

    </LinearLayout>
</ScrollView>
